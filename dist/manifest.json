{
  "name": "CatMask",
  "description": "CatMask Near Wallet",
  "version": "1.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "28",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "logo.png"
  },
  "background": {
    "scripts": ["background/background.js"]
  },
  "permissions": ["tabs", "storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
